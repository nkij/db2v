{
  "expo": {
    "name": "dB Voltage Converter",
    "slug": "db-voltage-converter",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f9fafb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.dbvoltageconverter"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./icons/icon-512x512.png",
        "backgroundColor": "#f9fafb"
      },
      "package": "com.yourname.dbvoltageconverter"
    },

    "plugins": [
      "expo-build-properties",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#f9fafb",
          "image": "./assets/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "dark": {
            "backgroundColor": "#1f2937",
            "image": "./assets/icon.png"
          }
        }
      ]
    ]
  }
}
